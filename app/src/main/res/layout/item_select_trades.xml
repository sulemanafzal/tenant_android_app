<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/checkbox_blumbing"
        style="@style/Widget.App.CheckBox"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:clickable="false"
        android:focusable="false"
        android:scaleX="0.70"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleY="0.70"
        />

    <TextView
        android:id="@+id/tv_plumbing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/outfit_regular"
        android:text="@string/str_plumbing"
        android:textSize="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="@+id/checkbox_blumbing"
        app:layout_constraintStart_toEndOf="@+id/checkbox_blumbing"
        app:layout_constraintTop_toTopOf="@+id/checkbox_blumbing" />


</androidx.constraintlayout.widget.ConstraintLayout>